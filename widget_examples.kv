<ImageExample@GridLayout>:
    cols: 3
    Image:
        source: "images/cake.jpg"
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
    Image:
        source: "images/cake.jpg"
        allow_stretch: True
        keep_ratio: False             # can only be used with allow_stretch
    AsyncImage:
        source: "images/donut.gif"    # default frame rate is slow about 4fps
        anim_delay: 1/60            # for donut.gif
        #anim_delay: 1/.5           # for chris.gif
# FOR ANIMATED GIF to WORK I NEEDED to install PILLOW

<WidgetExamples@GridLayout>:
    cols: 3
    ToggleButton:
        text: "OFF"
        on_state:  root.on_toggle_button_state(self)
        size_hint: None, 1
        width: "100dp"
    Button:
        text: "Tap to count"
        on_press: root.on_button_click()
        disabled: not root.count_enabled
    Label:
        text: root.my_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"
        color: 1,.5,1,1
    Switch:
        id: my_switch
        #on_active: root.on_switch_active(self)
        size_hint: None, 1
        width: "100dp"
        active: True
    Slider:
        id: my_slider
        #on_value: root.on_slider_value(self)
        min: 0
        max: 100
        value: 50
        orientation: "vertical"
        disabled: not my_switch.active
    BoxLayout:
        orientation: "vertical"
        Label:
            text: str(int(my_slider.value))
            font_name: "fonts/Lcd.ttf"
            font_size: "40dp"
            color: 1,.5,1,1
        ProgressBar:
            max: 100
            value: my_slider.value
    TextInput:
        id: my_text_input
        size_hint: None, 1
        width: "100dp"
        text: "foo"
        multiline: False
        on_text_validate: root.on_text_validate(self)
    Label:
        text: "Your name is: " + root.txt_input_str
